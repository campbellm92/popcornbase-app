<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/custom.css">
    <title>Sign up</title>

</head>

<body>
    <header>
        {{> header}}
    </header>

    <section class="signup-content d-flex justify-content-center align-items-center vh-100">
        <div class="container text-center ">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="auth-page-poster">
                        <img src="https://placehold.co/400x600" alt="" class="img-fluid">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="auth-form">
                        <h2 class="mt-5 signup-title">Sign up so you can save movies to your collection!</h2>
                        <form action="/signup" method="POST" novalidate>
                            <div class="form-floating mb-4">
                                <input type="email" class="form-control mt-5 custom" id="email" name="email"
                                    placeholder="Email" required>
                                <label for="email" class="form-label custom">Email</label>
                                {{#if invalidEmailError}}
                                <p class="mt-3 error">{{invalidEmailError}}</p>
                                {{/if}}
                                {{#if emailExistsError}}
                                <p class="mt-3 error">{{emailExistsError}}</p>
                                {{/if}}
                            </div>


                            <div class="form-floating mb-4">
                                <input type="password" class="form-control custom" id="password" name="password"
                                    placeholder="Password" required>
                                <label for="password" class="form-label custom">Password</label>
                                {{#if invalidPasswordError}}
                                <p class="mt-3 error">{{invalidPasswordError}}</p>
                                {{/if}}
                            </div>
                            {{#if requiredError}}
                            <p class="error"> {{requiredError}}</p>
                            {{/if}}
                            {{#if successfulSignup}}
                            <p class="auth-success-msg">{{successfulSignup}}</p>
                            <script>
                                setTimeout(() => {
                                    window.location.href = "/";
                                }, 2000);
                            </script>
                            {{/if}}
                            <div class="text-center">
                                <button type="submit" class="btn btn-lg sign-up-btn-custom mx-4">Sign Up</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>


        </div>


    </section>



    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>

</body>

</html>